<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="28dp"
    android:paddingBottom="16dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:background="@drawable/chat_background">

    <!-- Search pill -->
    <LinearLayout
        android:id="@+id/search_container"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:background="@drawable/pill_search"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- use AppCompatImageView so app:tint يعمل بثبات -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_search"
             />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Search by the name of the meal"
            android:paddingStart="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:ellipsize="end"
            android:singleLine="true"
            android:imeOptions="actionSearch"/>
    </LinearLayout>

    <!-- Segment buttons -->
    <LinearLayout
        android:id="@+id/segment_container"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/search_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:weightSum="3">

        <TextView
            android:id="@+id/btn_category"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Category"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="@drawable/segment_selected"
            android:textColor="@color/segment_selected_text"/>

        <TextView
            android:id="@+id/btn_ingredients"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Ingredients"
            android:textSize="14sp"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/segment_unselected"
            android:textColor="@color/segment_unselected_text"/>

        <TextView
            android:id="@+id/btn_country"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Country"
            android:textSize="14sp"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/segment_unselected"
            android:textColor="@color/segment_unselected_text"/>
    </LinearLayout>

    <!-- Scrollable grid using NestedScrollView + GridLayout -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/segment_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

