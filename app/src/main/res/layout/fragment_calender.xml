<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/chat_background"
    android:padding="16dp"
    tools:context=".ui.Calender">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/back"
            android:src="@drawable/ic_back_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:shadowColor="#22000000"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="@string/manage_your_meals_plan"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/plan_your_weekly_nutrition"
            android:textAlignment="center"
            android:textColor="#BFD6DF"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="@id/tvTitle"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

        <androidx.cardview.widget.CardView
            android:id="@+id/calendarCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:cardBackgroundColor="@color/card_dark_bg"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <!-- Native Calendar -->
                <CalendarView
                    android:id="@+id/calendarView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:dateTextAppearance="@style/CalendarDateText"
                    android:focusedMonthDateColor="#FFFFFF"
                    android:selectedDateVerticalBar="@null"
                    android:selectedWeekBackgroundColor="#335E6A"
                    android:showWeekNumber="false"
                    android:weekDayTextAppearance="@style/CalendarWeekDayText" />

                <!-- Go To Meals Button -->
                <Button
                    android:id="@+id/btnGoToMeals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Go To Meals"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#1ABC9C"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="end"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:elevation="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Today's Meals Title -->
        <TextView
            android:id="@+id/tvTodayTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="sans-serif-medium"
            android:text="Today's Meals"
            android:textColor="#E6F0F6"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/calendarCard" />

        <!-- Meals Horizontal Strip -->
        <LinearLayout
            android:id="@+id/mealsStrip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTodayTitle">

            <!-- Breakfast Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/meal_card_bg"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:padding="10dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivBreakfastPlus"
                    android:layout_width="match_parent"
                    android:layout_height="83dp"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_add"
                    app:shapeAppearanceOverlay="@style/RoundedTopCorners"
                    app:strokeColor="@android:color/transparent"
                    app:strokeWidth="0dp" />

                <TextView
                    android:id="@+id/tvBreakfastLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/breakfast"
                    android:textColor="#D8EEF4"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Lunch Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/meal_card_bg"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:padding="10dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivLunchPlus"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_add"
                    app:shapeAppearanceOverlay="@style/RoundedTopCorners"
                    app:strokeColor="@android:color/transparent"
                    app:strokeWidth="0dp" />

                <TextView
                    android:id="@+id/tvLunchLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/lunch"
                    android:textColor="#D8EEF4"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- Dinner Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:background="@drawable/meal_card_bg"
                android:foreground="?android:attr/selectableItemBackground"
                android:orientation="vertical"
                android:padding="10dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivDinnerPlus"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_add"
                    app:shapeAppearanceOverlay="@style/RoundedTopCorners"
                    app:strokeColor="@android:color/transparent"
                    app:strokeWidth="0dp" />

                <TextView
                    android:id="@+id/tvDinnerLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/dinner"
                    android:textColor="#D8EEF4"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/progressCard"
            android:layout_width="0dp"
            android:layout_height="88dp"
            android:layout_marginTop="58dp"
            android:background="@drawable/card_semi_transparent"
            app:cardCornerRadius="14dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mealsStrip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/card_dark_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="14dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/weekly_progress"
                        android:textColor="#CDE7E2"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/numberOfMealsInWeek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/_12_21_meals_planned"
                        android:textColor="#E6F0F6"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/percentOfMealsInWeek"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/progress_circle_bg"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="@string/_57"
                    android:textColor="#E6F0F6" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
