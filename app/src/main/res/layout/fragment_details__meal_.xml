<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gradient_start"
    android:fillViewport="true">

    <!-- CoordinatorLayout now is the scrollable content -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coord_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_gradient_start">

        <!-- AppBar (ثابت الآن) -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <!-- removed scrolling flags so the appbar stays fixed while page scrolls -->
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?attr/colorPrimary">

                <ImageView
                    android:id="@+id/DetaildMealImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/beef_image"
                    app:layout_collapseMode="parallax" />


            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <!-- Floating meal info card (ثابت فوق المحتوى) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_meal_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="310dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/elevated_card"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_blue_bg"
                android:orientation="vertical"
                android:padding="18dp">

                <TextView
                    android:id="@+id/detaildMealTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teriyaki Chicken Casserole"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Row for country and category (icons + plain text) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Country (flag icon + text) -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/Meal_Flag"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="country icon"
                            android:src="@drawable/egyptian_icon"
                            app:tint="@null" />

                        <TextView
                            android:id="@+id/meal_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Japanese"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- spacer between items -->
                    <View
                        android:layout_width="12dp"
                        android:layout_height="wrap_content" />

                    <!-- Category (icon + text) -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_category_icon"
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="category icon"
                            android:src="@drawable/category_meal_icon"
                            app:tint="@null" />

                        <TextView
                            android:id="@+id/meal_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chicken"
                            android:textColor="@color/text_primary"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Favorite button: uses your existing drawable (kept unchanged) -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/favorite_button"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/fav_button_unselected"
                    android:gravity="center"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="♡  Add to Favorites"
                    android:textAllCaps="false"
                    android:textColor="@color/fav_text_color"
                    android:textSize="14sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- ===== CONTENT (previously inside nested scroll) moved here) ===== -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="490dp"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <!-- Ingredients header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="6dp">

                <TextView
                    android:id="@+id/tv_ingredients_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingredients"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_ingredients_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="9 items"
                    android:textColor="@color/text_muted"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Horizontal recycler for ingredients (scrolling داخلي معطل ليخدم scroll العام) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                android:overScrollMode="never"
                android:paddingBottom="8dp"
                android:scrollbars="none" />

            <!-- Cooking Steps header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_steps_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cooking Steps"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_steps_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Step 1 of 6"
                    android:textColor="@color/text_muted"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Horizontal progress (use ProgressBar tinted) -->
            <ProgressBar
                android:id="@+id/steps_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="10dp"
                android:indeterminate="false"
                android:max="6"
                android:progress="1"
                android:progressBackgroundTint="@color/divider"
                android:progressTint="@color/accent_green" />

            <!-- Step navigation (arrows) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <View
                    android:layout_width="16dp"
                    android:layout_height="0dp" />


            </LinearLayout>

            <!-- Current step card -->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/card_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="18dp">


                <TextView
                    android:id="@+id/Congratulation_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:text="You completed the recipe!"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_step_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Great job! Your meal should be ready to enjoy."
                    android:textColor="@color/text_muted"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_last_step"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/fav_next_step_button"
                        android:gravity="center"
                        android:stateListAnimator="@null"
                        android:text="Last Step"
                        android:textAllCaps="false"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:visibility="gone"
                        app:cornerRadius="28dp"
                        app:rippleColor="@android:color/transparent" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_next_step"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/fav_next_step_button"
                        android:gravity="center"
                        android:stateListAnimator="@null"
                        android:text="Next Step"
                        android:textAllCaps="false"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        app:cornerRadius="28dp"
                        app:rippleColor="@android:color/transparent" />


                </LinearLayout>

            </LinearLayout>


            <!-- Recipe video card -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Recipe Video"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />


            <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_video"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"

                    app:layout_constraintDimensionRatio="20:15"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    app:layout_constraintTop_toTopOf="parent">

                    <WebView
                        android:id="@+id/webView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="10dp"
                android:text="Need Help?"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="14dp">

                <ImageView
                    android:id="@+id/iv_bot"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:contentDescription="CookBot"
                    android:src="@drawable/robot_cooker" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_bot_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ask AI about this meal"
                            android:textColor="@color/text_primary"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_bot_sub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Ask for substitutions, allergens, or tips"
                            android:textColor="@color/text_muted"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_ask_bot"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:background="@drawable/fav_next_step_button"
                            android:gravity="center"
                            android:stateListAnimator="@null"
                            android:text="Ask the CookBot"
                            android:textAllCaps="false"
                            android:textColor="@color/text_primary"
                            android:textSize="17sp"
                            app:cornerRadius="28dp"
                            app:rippleColor="@android:color/transparent" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="36dp" />

        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.core.widget.NestedScrollView>
