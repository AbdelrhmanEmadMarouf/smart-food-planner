<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_dark"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="32dp"
    android:paddingBottom="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp">

        <!-- circular avatar with subtle border -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/avatar_placeholder"
            android:scaleType="centerCrop"
            android:layout_marginBottom="18dp"
            android:background="@drawable/circle_avatar_bg"
            android:padding="6dp"
            android:contentDescription="Chef image" />

        <!-- Title -->
        <TextView
            android:id="@+id/welcome_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome Back"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#EAF5F6"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:id="@+id/welcome_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in to continue your culinary journey"
            android:textSize="12.5sp"
            android:textColor="#9FC3C5"
            android:layout_marginBottom="20dp"/>

        <!-- Email (keeps id) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="#9FC3C5"
                android:textSize="12sp"
                android:layout_marginBottom="6dp"/>
            <EditText
                android:id="@+id/email_edittext"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter your email"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:background="@drawable/edit_text_border"
                android:textColor="#EAF5F6"
                android:textColorHint="#83BCC0"
                android:inputType="textEmailAddress"
                android:singleLine="true"/>
        </LinearLayout>

        <!-- Password (keeps id) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="#9FC3C5"
                android:textSize="12sp"
                android:layout_marginBottom="6dp"/>
            <EditText
                android:id="@+id/password_edittext"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter your password"
                android:paddingLeft="14dp"
                android:paddingRight="44dp"
                android:background="@drawable/edit_text_border"
                android:textColor="#EAF5F6"
                android:textColorHint="#83BCC0"
                android:inputType="textPassword"
                android:singleLine="true"
                android:drawablePadding="8dp"/>
        </LinearLayout>


        <!-- Login button (keeps id) -->
        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_purple"
            android:textStyle="bold"
            android:layout_marginBottom="18dp"/>

        <!-- OR divider -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="18dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#264C4C"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  OR Continue With  "
                android:textColor="#9FC3C5"
                android:textSize="12sp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#264C4C"/>
        </LinearLayout>

        <!-- Google button (keeps id) -->
        <Button
            android:id="@+id/google_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Continue with Google"
            android:textAllCaps="false"
            android:background="@drawable/google_button_bg"
            android:drawableStart="@drawable/ic_google"
            android:drawablePadding="12dp"
            android:paddingLeft="12dp"
            android:textColor="#1A1A1A"
            android:layout_marginBottom="20dp"/>

        <!-- Create account (keeps id) -->
        <TextView
            android:id="@+id/create_account_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account? Create one"
            android:textColor="#81D8D0"
            android:textSize="14sp"
            android:layout_marginTop="6dp"/>

        <!-- Continue as guest (keeps id) -->
        <TextView
            android:id="@+id/guest_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue as Guest"
            android:textColor="#3FD2C6"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="18dp"/>

    </LinearLayout>
</ScrollView>
