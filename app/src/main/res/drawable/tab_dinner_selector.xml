<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected state: purple background -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#9575CD" /> <!-- purple -->
            <corners android:radius="12dp" />
            <padding android:left="12dp" android:top="6dp" android:right="12dp" android:bottom="6dp" />
            <size android:height="44dp" />
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#B39DDB" /> <!-- lighter -->
            <corners android:radius="12dp" />
            <size android:height="44dp" />
        </shape>
    </item>

    <!-- Default / unselected -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFFFF" /> <!-- white -->
            <stroke android:width="1dp" android:color="#E1BEE7" /> <!-- light purple stroke -->
            <corners android:radius="12dp" />
            <size android:height="44dp" />
        </shape>
    </item>

</selector>
