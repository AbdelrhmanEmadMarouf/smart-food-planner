<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- base gradient purple -->
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="0"
                android:startColor="#C15EE9"
                android:endColor="#9B4BE4"/>
            <corners android:radius="28dp"/>
        </shape>
    </item>

    <!-- subtle inner darker overlay for depth -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/>
            <corners android:radius="26dp"/>
            <stroke android:width="0.5dp" android:color="#0000001A"/>
        </shape>
    </item>

    <!-- gloss highlight (top) to simulate shine -->
    <item android:top="2dp" android:left="6dp" android:right="6dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#60FFFFFF"
                android:centerColor="#30FFFFFF"
                android:endColor="#00FFFFFF"/>
            <corners android:radius="26dp"/>
        </shape>
    </item>

</layer-list>
