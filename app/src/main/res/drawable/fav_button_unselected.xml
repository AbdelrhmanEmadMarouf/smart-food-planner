<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- subtle outer shadow (lower offset) -->
    <item android:bottom="3dp" android:left="0dp" android:right="0dp">
        <shape>
            <solid android:color="#0B000000"/>
            <corners android:radius="28dp"/>
        </shape>
    </item>

    <!-- main rounded pill with slight gradient top->bottom -->
    <item>
        <shape>
            <gradient
                android:startColor="@color/button_dark_top"
                android:endColor="@color/button_dark_bottom"
                android:angle="270"/>
            <stroke android:width="1dp" android:color="@color/button_stroke"/>
            <corners android:radius="28dp"/>
            <padding android:left="14dp" android:top="10dp" android:right="14dp" android:bottom="10dp"/>
        </shape>
    </item>
</layer-list>
