<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- subtle outer shadow -->
    <item android:top="2dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#22000000"/> <!-- very light shadow -->
            <corners android:radius="28dp"/>
        </shape>
    </item>

    <!-- main pill -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#F4F6F6"/> <!-- main light background -->
            <stroke android:width="1dp" android:color="#E6ECEC"/> <!-- subtle border -->
            <corners android:radius="28dp"/>
            <padding android:left="12dp" android:top="8dp" android:right="12dp" android:bottom="8dp"/>
        </shape>
    </item>

</layer-list>
