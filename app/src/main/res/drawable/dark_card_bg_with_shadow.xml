<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- base dark rounded background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0A2F33" /> <!-- dark teal -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- inner shadow (top-left soft shadow) using inset so it looks like inner glow/shadow -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#20000000"
                android:centerColor="#10000000"
                android:endColor="#00000000" />
            <corners android:radius="11.5dp" />
        </shape>
    </item>

    <!-- subtle bottom outer shadow (to lift card) -->
    <item android:top="0dp">
        <shape android:shape="rectangle">
            <size android:height="0.5dp" />
            <gradient
                android:angle="90"
                android:startColor="#00000000"
                android:endColor="#20000000" />
        </shape>
    </item>

</layer-list>
